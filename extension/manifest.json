{
  "manifest_version": 3,
  "name": "AI MINDS â€” Memory Capture",
  "version": "1.0.0",
  "description": "Capture web content into your AI MINDS personal knowledge base. Select elements, auto-capture pages, and query your memory.",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": ["http://localhost:5000/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "toggle-selection-mode": {
      "suggested_key": { "default": "Ctrl+Shift+F" },
      "description": "Toggle element selection mode"
    },
    "capture-page": {
      "suggested_key": { "default": "Ctrl+Shift+S" },
      "description": "Capture entire page"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": [
        "constants.js",
        "utils.js",
        "metadata.js",
        "ui.js",
        "selection.js",
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
